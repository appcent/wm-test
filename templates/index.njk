{% extends 'base.njk' %}

{% set page = 'b-main-page' %}
{% set pageName = 'Шаблон' %}
{% set breadcrumbs = [{'name':'Главная','url':'index'}] %}
{% set navActiveItem = 0 %}


{% block content %}

<div class="b-wrapper">

    <div class="b-space"></div>

    {% include '_slider.njk' %}

    <div class="b-space"></div>
    <div class="b-space"></div>

    <div class="b-anchor" id="yamap"></div>

    <div class="b-content__title h2">yamap</div>

    <!-- yamap -->
    <div id="map" class="b-map"></div>
    <!--/ yamap-->

    <div class="b-space"></div>

    <div class="b-anchor" id="form"></div>

    <div class="b-content__title h2">form</div>

    <!-- form -->
    <form class="b-feedback" action="" method="post">

        <div class="b-feedback__input-text">
            <input type="text" id="name" name="name" required>
            <label for="name">Имя</label>
        </div>

        <div class="b-feedback__input-text">
            <input type="text" id="phone" name="phone" required>
            <label for="phone">Телефон</label>
        </div>

        <div class="b-feedback__textarea">
            <textarea name="message" id="message"></textarea>
            <label for="message">Ваш вопрос, просьба или предложение</label>
        </div>

        <div class="b-feedback__input-checkbox">
            <input id="personal-data" type="checkbox" name="agree">
            <label for="personal-data">
                <span class="b-feedback__input-custom-checkbox"></span>
                Я согласен на обработку персональных данных на условиях и для целей определенных
                <a href="#" class="b-feedback__personal-data" target="_blank">Политикой Компании по защите персональных
                    данных пользователей</a>
            </label>
        </div>

        <input type="hidden" value="Заказать обратный звонок" name="form_name">
        <div class="b-feedback__input-submit">
            <input type="submit" value="Отправить">
        </div>

    </form>
    <!--/ form -->

    <div class="b-space"></div>

    <div class="b-content__title h2">modal</div>

    <!-- modal -->
    <a href="#" class="b-btn" data-izimodal-open="#get-call" data-izimodal-transitionin="fadeInDown">Open modal</a>
    <!--/ modal -->

    <div class="b-space"></div>


</div>

{% endblock content %}
